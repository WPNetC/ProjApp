<UserControl
    x:Class="VsIncludeEditor.Modules.SettingsEditor.SettingsEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VsIncludeEditor.Modules.SettingsEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:SettingsEditorViewModel x:Name="vm" />
    </UserControl.DataContext>
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="5,2"
                    VerticalAlignment="Center"
                    Text="Visual Studio Path" />
                <TextBox
                    x:Name="txtVSPath"
                    MaxWidth="300"
                    VerticalContentAlignment="Center"
                    Text="{Binding VSPath}" />
                <Button Margin="5,2" Content="Find" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
