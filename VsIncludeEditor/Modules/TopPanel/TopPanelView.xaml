<UserControl x:Class="VsIncludeEditor.Modules.TopPanel.TopPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VsIncludeEditor.Modules.TopPanel"
             mc:Ignorable="d" 
             d:DesignHeight="38" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:TopPanelViewModel x:Name="vm" />
    </UserControl.DataContext>
    <DockPanel Grid.Row="0" LastChildFill="False">
        <Button DockPanel.Dock="Left" Content="Open" Style="{StaticResource ResourceKey=TopNavButton}" Command="{Binding cmdOpenFile}"/>
        <TextBlock DockPanel.Dock="Right" Text="{Binding ProjectName}" Style="{StaticResource ResourceKey=TopNavText}"/>
    </DockPanel>
</UserControl>
