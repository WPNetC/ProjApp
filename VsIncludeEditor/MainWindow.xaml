<Window x:Class="VsIncludeEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VsIncludeEditor"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="825">
    <Window.DataContext>
        <local:MainWindowViewModel x:Name="vm"/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>       
        <ContentPresenter Grid.Row="0" Name="cntHead" Content="{Binding TopPanelControl}"/>
        <ContentPresenter Grid.Row="1" Name="cntBody" Content="{Binding CenterPanelControl}"/>
        <DockPanel Grid.Row="2" Name="cntFoot">
            
        </DockPanel>
    </Grid>
</Window>
